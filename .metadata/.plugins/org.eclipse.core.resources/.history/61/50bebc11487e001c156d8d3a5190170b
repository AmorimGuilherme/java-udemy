package fundamentos_basicos;

public class Aritmeticos {
	
	public static void main(String[] args) {
		
		var x = 70;
		var y = 2;
		
		System.out.println(x + y);
		System.out.println(x - y);
		System.out.println(x * y);
		System.out.println(x / y);
		
		int a = 8;
		int b = 3;
		
		System.out.println(a + b);
		System.out.println(a - b);
		System.out.println(a * b);
		System.out.println(a / b);
		System.out.println(a / (double) b); // CAST ---> (double) b
	
	
	}

}
